<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
</head>

<body>
    <h1>All Products</h1>



    <form action="">

        <label for="categorySelect">Sort By:</label>
        <select name="category" id="categorySelect">
            <option value="all">All</option>
            <% for (let cat of categories){ %>
                <option value="<%=cat%>" id="<%=cat%>">
                    <%=cat%>
                </option>
                <% } %>

        </select>
    </form>




    <ul>
        <% for(let product of products){ %>
            <li><a href="/products/<%=product.id%>">Product is: <%=product.name%></a>
            </li>
            <ul>
                <li>Price: <%= product.price %>
                </li>
                <li>Category: <%= product.category %>
                </li>
            </ul>
            <% } %>
    </ul>

    <a href="/products/new">List a new product</a>

    <script src="helper.js"></script>


</body>

</html>